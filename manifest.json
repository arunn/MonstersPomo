{
  "manifest_version": 2,

  "name": "Monster's Pomodoro",
  "description": "This is a pomodoro extension based on Monster's theme. I do not own any of this.",
  "version": "1.2",
  "background" : {
    "scripts" : ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/monsters_logo.png",
    "default_title": "Monster's Pomodoro!"
  },
  "permissions": [
    "notifications",
    "http://*/",
    "https://*/",
    "tabs"
  ],
  "options_page": "options.html",
  "web_accessible_resources": [ "icons/james_sullivan_huge.jpg" ]

}